<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Заказ"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:translationY="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:hint="Имя заказчика :"
            android:textColorHint="#5E5E5E"
            android:textSize="16sp"
            android:translationX="30sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:hint="Товары в коризне :"
            android:textColorHint="#5E5E5E"
            android:textSize="16sp"
            android:translationX="30sp"
            android:translationY="10sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="170sp"
            android:layout_height="wrap_content"
            android:hint="Количество товара :"
            android:textColorHint="#5E5E5E"
            android:textSize="16sp"
            android:translationX="30sp"
            android:translationY="20sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:hint="Цена заказа :"
            android:textColorHint="#5E5E5E"
            android:textSize="16sp"
            android:translationX="30sp"
            android:translationY="30sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>